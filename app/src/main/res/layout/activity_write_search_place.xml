<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/TopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/g_12_topbar">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/g_12_sarchbox"
            android:layout_margin="10dp"
            >

            <com.lhd.view.PkEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="리뷰 대상 업체를 검색해주세요"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:singleLine="true"
                />

        </RelativeLayout>

        <com.lhd.view.PkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/g_12_sarchbar"
            android:layout_marginBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb"
            />


        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/view_list"
            android:layout_marginBottom="50dp"
            />

    </LinearLayout>

    <include
        layout="@layout/layout_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>