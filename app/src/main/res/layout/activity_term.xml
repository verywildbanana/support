<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kiwi="http://schemas.kiwiple.com/kiwi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.lhd.view.PkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/g_14_information" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.lhd.view.PkOnOffToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                kiwi:ToggleButtonOffImage="@drawable/g_18_gae2"
                kiwi:ToggleButtonOnImage="@drawable/g_18_gae1" />


            <com.lhd.view.PkOnOffToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                kiwi:ToggleButtonOffImage="@drawable/g_18_yak2"
                kiwi:ToggleButtonOnImage="@drawable/g_18_yak1" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bebebe" />


    </LinearLayout>


    <include
        layout="@layout/layout_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>