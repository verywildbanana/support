<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.lhd.view.PkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/g_15_topbar" />

        <com.lhd.view.PkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/g_15_logo" />


        <com.lhd.view.PkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/g_15_midbar" />


        <com.lhd.view.PkTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="친구에게 추천하면 응모권 +1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="23dp"
            android:gravity="center"
            android:singleLine="true"
            />

        <com.lhd.view.PkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/g_15_facebook" />

        <com.lhd.view.PkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/g_15_kakao" />


    </LinearLayout>


    <include
        layout="@layout/layout_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>